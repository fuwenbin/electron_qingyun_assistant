{
  "appId": "com.vue3-electron.app",
  "productName": "剪辑助手",
  "directories": {
    "output": "dist_electron"
  },
  "compression": "normal",
  "removePackageScripts": false,
  "buildDependenciesFromSource": false,
  "nodeGypRebuild": false,
  "forceCodeSigning": false,
  "asar": true,
  "electronVersion": "36.9.1",
  "extraMetadata": {
    "main": "dist-electron/main.js"
  },
  "files": [
    "dist/**/*",
    "dist-electron/main.js",
    "dist-electron/preload.js",
    "package.json"
  ],
  "asarUnpack": [
    "resources/**/*",
    "bin/**/*"
  ],
  "extraResources": [
    {
      "from": "resources/fonts",
      "to": "fonts",
      "filter": [
        "**/*"
      ]
    },
    {
      "from": "resources/database",
      "to": "database",
      "filter": [
        "**/*"
      ]
    },
    {
      "from": "bin/ffmpeg.exe",
      "to": "ffmpeg.exe"
    },
    {
      "from": "bin/ffprobe.exe",
      "to": "ffprobe.exe"
    },
    {
      "from": "bin/ffplay.exe",
      "to": "ffplay.exe"
    }
  ],
  "mac": {
    "category": "public.app-category.utilities",
    "target": [
      {
        "target": "dmg",
        "arch": [
          "arm64",
          "x64"
        ]
      }
    ],
    "minimumSystemVersion": "10.13.0",
    "hardenedRuntime": true,
    "gatekeeperAssess": false,
    "files": [
      "dist/**/*",
      "dist-electron/main.js",
      "dist-electron/preload.js",
      "resources/database/**/*",
      "resources/fonts/**/*",
      "bin/ffmpeg",
      "bin/ffprobe",
      "bin/ffplay",
      "package.json",
      "!bin/*.exe",
      "!resources/chrome-win/**/*"
    ]
  },
  "dmg": {
    "format": "ULFO"
  },
  "win": {
    "target": [
      {
        "target": "portable",
        "arch": [
          "x64"
        ]
      },
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "requestedExecutionLevel": "asInvoker",
    "extraResources": [
      {
        "from": "resources/chrome-win",
        "to": "chrome-win",
        "filter": [
          "**/*"
        ]
      }
    ],
    "files": [
      "dist/**/*",
      "dist-electron/main.js",
      "dist-electron/preload.js",
      "resources/database/**/*",
      "resources/fonts/**/*",
      "bin/ffmpeg.exe",
      "bin/ffprobe.exe",
      "bin/ffplay.exe",
      "package.json",
      "resources/chrome-win/**/*"
    ]
  },
  "nsis": {
    "oneClick": false,
    "allowToChangeInstallationDirectory": true,
    "createDesktopShortcut": true,
    "createStartMenuShortcut": true,
    "runAfterFinish": false,
    "perMachine": false,
    "allowElevation": true
  },
  "portable": {
    "requestExecutionLevel": "user"
  }
}
