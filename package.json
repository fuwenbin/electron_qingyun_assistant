{
  "name": "剪辑助手",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "electron:dev": "concurrently -k \"vite\" \"wait-on http://localhost:5173 && tsc -p tsconfig.node.json && electron .\"",
    "electron:build": "npm run build:renderer && npm run build:main && electron-builder",
    "electron:preview": "npm run build:renderer && npm run build:main && electron .",
    "build:renderer": "vue-tsc --noEmit && vite build",
    "build:main": "tsc -p tsconfig.node.json",
    "type-check": "vue-tsc --noEmit",
    "type-check:main": "tsc -p tsconfig.node.json --noEmit"
  },
  "dependencies": {
    "@alicloud/pop-core": "^1.8.0",
    "@electron/remote": "^2.1.2",
    "@ffmpeg-installer/ffmpeg": "^1.1.0",
    "@ffmpeg/core": "^0.12.10",
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@ffmpeg/util": "^0.12.2",
    "@quasar/extras": "^1.16.17",
    "alibabacloud-nls": "^1.0.4",
    "ant-design-vue": "^4.2.6",
    "axios": "^1.8.4",
    "buffer": "^6.0.3",
    "crypto-browserify": "^3.12.1",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.13",
    "electron-log": "^5.3.4",
    "ffmpeg-static": "^5.2.0",
    "ffprobe-static": "^3.1.0",
    "file-saver": "^2.0.5",
    "fluent-ffmpeg": "^2.1.3",
    "fs-extra": "^11.3.0",
    "iconv-lite": "^0.6.3",
    "js-base64": "^3.7.7",
    "path": "^0.12.7",
    "pinia": "^2.1.6",
    "qs": "^6.14.0",
    "quasar": "^2.18.1",
    "stream-browserify": "^3.0.0",
    "util": "^0.12.5",
    "uuid": "^11.1.0",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@quasar/vite-plugin": "^1.9.0",
    "@types/crypto-js": "^4.2.2",
    "@types/electron": "^1.4.38",
    "@types/node": "^22.15.3",
    "@types/qs": "^6.9.18",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-vue": "^4.6.2",
    "concurrently": "^9.1.2",
    "electron": "^25.3.1",
    "electron-builder": "^24.6.3",
    "sass": "^1.69.5",
    "typescript": "^5.8.3",
    "vite": "^4.5.13",
    "vite-plugin-electron": "^0.11.2",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-tsc": "^2.2.10",
    "wait-on": "^8.0.3"
  },
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.vue3-electron.app",
    "productName": "Vue3 Electron App",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
