{
  "name": "vue3-electron-app",
  "version": "1.0.0",
  "private": true,
  "scripts": {
    "dev": "vite",
    "build": "vue-tsc --noEmit && vite build",
    "preview": "vite preview",
    "electron:dev": "vite --mode development",
    "electron:build": "vue-tsc --noEmit && vite build && electron-builder",
    "electron:preview": "tsc electron/main.ts electron/preload.ts --outDir dist-electron && electron ."
  },
  "dependencies": {
    "@electron/remote": "^2.1.2",
    "@ffmpeg/core": "^0.12.10",
    "@ffmpeg/ffmpeg": "^0.12.15",
    "@ffmpeg/util": "^0.12.2",
    "@quasar/extras": "^1.16.17",
    "ant-design-vue": "^4.2.6",
    "axios": "^1.8.4",
    "crypto-js": "^4.2.0",
    "dayjs": "^1.11.13",
    "pinia": "^2.1.6",
    "qs": "^6.14.0",
    "quasar": "^2.18.1",
    "vue": "^3.3.4",
    "vue-router": "^4.2.4",
    "ws": "^8.18.1"
  },
  "devDependencies": {
    "@quasar/vite-plugin": "^1.9.0",
    "@types/crypto-js": "^4.2.2",
    "@types/node": "^22.14.1",
    "@types/qs": "^6.9.18",
    "@types/ws": "^8.18.1",
    "@vitejs/plugin-vue": "^4.2.3",
    "electron": "^25.3.1",
    "electron-builder": "^24.6.3",
    "sass": "^1.69.5",
    "typescript": "^5.1.6",
    "vite": "^4.4.9",
    "vite-plugin-electron": "^0.11.2",
    "vite-plugin-electron-renderer": "^0.14.5",
    "vue-tsc": "^1.8.8"
  },
  "main": "dist-electron/main.js",
  "build": {
    "appId": "com.vue3-electron.app",
    "productName": "Vue3 Electron App",
    "directories": {
      "output": "dist_electron"
    },
    "files": [
      "dist/**/*",
      "dist-electron/**/*"
    ],
    "mac": {
      "category": "public.app-category.utilities"
    },
    "win": {
      "target": [
        "nsis"
      ]
    },
    "linux": {
      "target": [
        "AppImage"
      ]
    }
  }
}
