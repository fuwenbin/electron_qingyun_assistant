# Git LFS tracking for large binary files
*.exe filter=lfs diff=lfs merge=lfs -text
bin/*.exe filter=lfs diff=lfs merge=lfs -text

# FFmpeg binaries
bin/ffmpeg.exe filter=lfs diff=lfs merge=lfs -text
bin/ffprobe.exe filter=lfs diff=lfs merge=lfs -text
bin/ffplay.exe filter=lfs diff=lfs merge=lfs -text

# Chrome binaries (if needed)
resources/chrome-win/**/*.exe filter=lfs diff=lfs merge=lfs -text